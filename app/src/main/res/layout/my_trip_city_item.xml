<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
<androidx.cardview.widget.CardView
    android:id="@+id/my_trip_item_cv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="50dp"
    android:layout_gravity="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="18dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="20dp">
    <ImageView
        android:id="@+id/my_trip_item_img_iv1"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/city_item_sample" >
    </ImageView>
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/my_trip_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/my_trip_item_cv1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="18dp"
        android:text="뉴욕"
        android:textAppearance="@style/MyTripCityNameAppearance"/>
    <TextView
        android:id="@+id/my_trip_item_period_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/my_trip_item_cv1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="18dp"
        android:text="2023.02.07 (수) - 2023.02.09 (금)"
        android:textAppearance="@style/MyTripCityPeriodAppearance"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="27dp"
        android:src = "@drawable/ic_folder_close"/>
</androidx.constraintlayout.widget.ConstraintLayout>
