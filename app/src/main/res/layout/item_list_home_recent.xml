<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_nation_backImage"
        android:layout_width="123dp"
        android:layout_height="123dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/rectangle_home_radius_13"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_doko"
        android:tintMode="src_atop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/transpatent_black" />

    <ImageView
        android:id="@+id/iv_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintEnd_toEndOf="@id/iv_nation_backImage"
        app:layout_constraintTop_toTopOf="@id/iv_nation_backImage" />

    <TextView
        android:id="@+id/tv_nation_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/notosans_bold"
        android:text="아야나 짐바란 리조트 앤 스\n파,발리"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@id/iv_nation_backImage"
        app:layout_constraintStart_toStartOf="@id/iv_nation_backImage"
        app:layout_constraintTop_toBottomOf="@id/iv_nation_backImage" />

    <TextView
        android:id="@+id/tv_nation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="잠바란"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_nation_description"
        app:layout_constraintTop_toBottomOf="@id/tv_nation_description" />

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="@id/tv_nation_name"
        app:layout_constraintTop_toBottomOf="@id/tv_nation_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.9(93)"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_star"
        app:layout_constraintStart_toEndOf="@id/iv_star"
        app:layout_constraintTop_toTopOf="@id/iv_star" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/notosans_bold"
        android:text="282,267원"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/iv_star"
        app:layout_constraintTop_toBottomOf="@id/iv_star" />


</androidx.constraintlayout.widget.ConstraintLayout>