<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_nation_backImage"
        android:layout_width="207dp"
        android:layout_height="152dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/rectangle_home_radius_13"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_doko"
        android:tintMode="src_atop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/transpatent_black" />

    <TextView
        android:id="@+id/tv_nation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/notosans_bold"
        android:text="도쿄디즈니 랜드"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/iv_nation_backImage"
        app:layout_constraintTop_toTopOf="@id/iv_nation_backImage" />

    <ImageView
        android:id="@+id/iv_nation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/ic_location_on"
        app:layout_constraintBottom_toBottomOf="@id/iv_nation_backImage"
        app:layout_constraintEnd_toEndOf="@id/iv_nation_backImage" />


    <TextView
        android:id="@+id/tv_nation_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="17dp"
        android:text="일본·도쿄"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/iv_nation_backImage"
        app:layout_constraintEnd_toStartOf="@id/iv_nation_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>