<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_nation_backImage"
        android:layout_width="188dp"
        android:layout_height="249dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/rectangle_home_radius_13"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_doko"
        android:tintMode="src_atop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/transpatent_black" />

    <TextView
        android:id="@+id/tv_nation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/notosans_bold"
        android:text="파리에서 놓칠 수 없는\n인생사진 스팟⭐️"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/iv_nation_backImage"
        app:layout_constraintTop_toTopOf="@id/iv_nation_backImage" />



</androidx.constraintlayout.widget.ConstraintLayout>