<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/my_trip_day1_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:text="1일차"
        android:textAppearance="@style/MyTripDay1Appearance"/>
    <TextView
        android:id="@+id/my_trip_day2_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/my_trip_day1_item_tv"
        app:layout_constraintTop_toTopOf="@id/my_trip_day1_item_tv"
        app:layout_constraintBottom_toBottomOf="@id/my_trip_day1_item_tv"
        android:layout_marginStart="4dp"
        android:text="02.04"
        android:textAppearance="@style/MyTripDay2Appearance"/>
    <TextView
        android:id="@+id/my_trip_day3_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/my_trip_day2_item_tv"
        app:layout_constraintTop_toTopOf="@id/my_trip_day2_item_tv"
        app:layout_constraintBottom_toBottomOf="@id/my_trip_day2_item_tv"
        android:text="(토)"
        android:textAppearance="@style/MyTripDay2Appearance"/>

</androidx.constraintlayout.widget.ConstraintLayout>
